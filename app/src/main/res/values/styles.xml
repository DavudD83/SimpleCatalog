<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="toolbarStyle">@style/BaseToolbarStyle</item>
    </style>

    <style name="BaseToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="CatalogItemValueStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">@dimen/small</item>
    </style>

    <style name="CatalogItemTitleStyle">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginEnd">@dimen/small</item>
    </style>

    <style name="CatalogErrorTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
</resources>